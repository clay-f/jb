<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.f.dao.VoucherDao">
    <cache type="org.mybatis.caches.redis.RedisCache"/>
    <resultMap id="getAllVouchersResult" type="Voucher">
        <id property="id" column="id"/>
        <result property="item" column="item"/>
        <result property="account" column="account"/>
        <result property="checkOutStateId" column="check_out_state_id"/>
        <result property="employeeId" column="employee_id"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>
    <select id="getAllVouchers" resultMap="getAllVouchersResult">
        select * from voucher;
    </select>

    <select id="getVoucherById" resultMap="getAllVouchersResult" parameterType="Integer">
        select
          id, item, account, check_out_state_id
        from
          voucher v
        where id = #{id}
    </select>

    <delete id="deleteVoucherById" parameterType="Integer">
        delete from voucher where id = #{id}
    </delete>

    <select id="size" resultType="Integer">
        select count(1) from voucher
    </select>

    <insert id="saveVoucher" parameterType="Voucher">
        insert into voucher(employee_id, item, account)
        values (#{employeeId}, #{item}, #{account})
    </insert>

    <update id="updateVoucher" parameterType="Voucher">
        update voucher
        <set>
            <if test="item != null">item = #{item},</if>
            <if test="account != null">account = #{account},</if>
            <if test="employeeId != null">employee_id = #{employeeId},</if>
            <if test="updatedAt != null">updated_at = #{updatedAt}</if>
        </set>
        where id = #{id}
    </update>
</mapper>